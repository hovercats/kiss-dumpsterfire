#!/bin/sh -e

export PKG_CONFIG_PATH="/usr/lib/pkgconfig"

./configure \
    --cc="${CC:-cc}" \
    --cxx="${CXX:-c++}" \
    --prefix=/usr \
    --disable-debug \
    --disable-libxml2 \
    --enable-static \
    --enable-gpl \
    --enable-libdrm \
    --enable-libmp3lame \
    --enable-libopus \
    --enable-libvorbis \
    --enable-libvpx \
    --enable-libwebp \
    --enable-libxvid \
    --enable-libass \
    --enable-nonfree \
    --enable-libtls \
    --enable-alsa \
    --enable-version3 \
    --enable-lto \
    --enable-libx265 \
    --enable-libx264 \
    --x86asmexe=nasm \
    --pkg-config-flags="--static" \
    --extra-ldexeflags="--static" \
    --extra-ldflags="-L/usr/lib"

make
make install

rm -rf "$1/usr/share/ffmpeg/examples"
