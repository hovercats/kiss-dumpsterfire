#!/bin/sh -e

patch -p1 < cp-dont-check-symlinks.patch

# tar and strings is provided elsewhere.
# also remove other unneeded utilities
sed -e '/strings\\/d' \
	-e '/tar\\/d' \
	-e '/sha224sum\\/d' \
	-e '/sha384sum\\/d' \
	-e '/sha512-224sum\\/d' \
	-e '/sha512-256sum\\/d' \
	Makefile > _
mv -f _ Makefile

make LDFLAGS="$LDFLAGS -static-pie" CFLAGS="$CFLAGS -fPIE"
make DESTDIR="$1" PREFIX=/usr install
