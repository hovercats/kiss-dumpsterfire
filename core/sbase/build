#!/bin/sh -e

for p in *.patch; do
	patch -p1 < "$p"
done

# getconf, tar and strings is provided elsewhere.
# also remove other unneeded utilities
sed -e '/getconf\\/d' \
	-e '/strings\\/d' \
	-e '/tar\\/d' \
	-e '/sha224sum\\/d' \
	-e '/sha384sum\\/d' \
	-e '/sha512-224sum\\/d' \
	-e '/sha512-256sum\\/d' \
	Makefile > _
mv -f _ Makefile

make LDFLAGS="$LDFLAGS -static" sbase-box
make DESTDIR="$1" PREFIX=/usr   sbase-box-install
