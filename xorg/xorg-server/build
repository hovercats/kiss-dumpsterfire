#!/bin/sh -e

patch -p1 < rootless_modesetting.patch

./configure \
    --prefix=/usr \
    --localstatedir=/var \
    --disable-systemd-logind \
    --disable-xwayland \
    --disable-unit-tests \
    --enable-dri2 \
    --disable-xvfb \
    --disable-xnest \
    --enable-glx \
    --enable-glamor \
    --enable-xorg \
    --with-sha1=libcrypto \
    --with-systemd-daemon=off

make
make DESTDIR="$1" install
